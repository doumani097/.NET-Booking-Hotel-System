@model IList<BookingWeb.Models.Hotel>

@{
    ViewData["Title"] = "Manage Hotels";
}
<div class="container">
<div class="management-header my-5">
    <h2 class="text-white float-left">Manage Hotels</h2>
    <a class="btn btn-success float-right" asp-action="Upsert">Create New Hotel</a>
    <div class="clearfix"></div>
</div>
@if(Model.Count() > 0){
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Summary</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <th scope="row">@hotel.Id</th>
                <td>@hotel.Name</td>
                <td>@hotel.Summary</td>
                <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@hotel.Id">Delete</a>
                <a class="btn btn-primary" asp-action="Upsert" asp-route-id="@hotel.Id">Edit</a>
                </td>
            </tr>
        }
      </tbody>
    </table>
}
else
{
    <h4 class="text-white">There are no hotels availiable now...</h4>        
}
</div>