@model IList<BookingWeb.Models.Room>

@{
    ViewData["Title"] = "Manage Rooms";
}
<div class="container">
<div class="management-header my-5">
    <h2 class="text-white float-left">Manage Rooms</h2>
    <a class="btn btn-success float-right" asp-action="Upsert">Create New Room</a>
    <div class="clearfix"></div>
</div>
@if(Model.Count() > 0){
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Type</th>
          <th scope="col">Max No Persons</th>
          <th scope="col">Price Per Night</th>
          <th scope="col">Branch Name</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <th scope="row">@branch.Id</th>
                <td>@branch.Type</td>
                <td>@branch.MaxNoOfPersons</td>
                <td>@branch.PricePerNight</td>
                <td>@branch.Branch.Name</td>
                <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@branch.Id">Delete</a>
                <a class="btn btn-primary" asp-action="Upsert" asp-route-id="@branch.Id">Edit</a>
                </td>
            </tr>
        }
      </tbody>
    </table>
}
else
{
    <h4 class="text-white">There are no rooms availiable now...</h4>        
}
</div>