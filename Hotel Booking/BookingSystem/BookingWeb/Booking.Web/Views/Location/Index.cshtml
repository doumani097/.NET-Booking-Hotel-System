@model IList<BookingWeb.Models.Location>

@{
    ViewData["Title"] = "Manage locations";
}
<div class="container">
<div class="management-header my-5">
    <h2 class="text-white float-left">Manage Locations</h2>
    <a class="btn btn-success float-right" asp-action="Upsert">Create New Location</a>
    <div class="clearfix"></div>
</div>
@if(Model.Count() > 0){
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Country</th>
          <th scope="col">City</th>
          <th scope="col">Handle</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <th scope="row">@location.Id</th>
                <td>@location.Country</td>
                <td>@location.City</td>
                <td>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@location.Id">Delete</a>
                <a class="btn btn-primary" asp-action="Upsert" asp-route-id="@location.Id">Edit</a>
                </td>
            </tr>
        }
      </tbody>
    </table>
}
else
{
    <h4 class="text-white">There are no locations availiable now...</h4>        
}
</div>