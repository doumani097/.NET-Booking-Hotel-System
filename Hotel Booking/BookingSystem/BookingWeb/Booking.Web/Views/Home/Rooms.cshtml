@model IList<BookingWeb.Models.Room>
@{
    ViewData["Title"] = "Sea Horizon";
}
<div class="locations my-5">
        <div class="container">
            <h2 class="locations-head">Available rooms</h2>
 
            @if(Model.Count() > 0)
            {
            <div class="row mt-5">

                @foreach (var room in Model)
                {
                <div class="col-md-4">
                    <div class="fullwrap mt-3">
                        @{
                            var base64 = Convert.ToBase64String(@room.Image);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }
                        <img src="@imgsrc"/>
                        <div class="fullcap">
                            <a asp-action="Reserve" asp-route-roomId="@room.Id">@room.Type</a>
                        </div>
                    </div>
                </div>
                }
            </div>
        }
        else
        {
            <h2 class="locations-head">There are no rooms available in this branch now...</h2>
        }
        </div>
    </div>